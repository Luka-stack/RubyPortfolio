<div class="app-card-container">
  <div class="card">

    <h1>Pages#about</h1>

    <hr>

    <div class="row">

      <div class="col-md-4">
        <%= image_tag  "eclipse1.jpg", width: 180, alt: 'nisshoku', class: 'profile-image'%>

        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar"
                      aria-valuenow="<%= skill.percent_utilized %>" aria-valuemax="100"
                      style="width: <%= skill.percent_utilized %>%">
                </div>
              </div>
            </div>
          <% end %>
        </div>

      </div>

      <div class="col-md-8">
        <p>Find me in app/views/pages/about.html.erb</p>


        <p>
          <button
            class="btn btn-primary" type="button" data-toggle="collapse" data-target="#something"
            aria-expanded="false" aria-controls="something"
          >
            Something
          </button>

          <button
            class="btn btn-primary" type="button" data-toggle="collapse" data-target="#something"
            aria-expanded="false" aria-controls="somethingElse"
          >
            Something Else
          </button>
        </p>

        <p>
          <div class="collapse" id="something">
            <div class="card card-block">
              Something nr 1
            </div>
            <div class="card card-block">
              Something nr 2
            </div>
          </div>

        <div class="collapse" id="somethingElse">
          <div class="card card-block">
            Something else nr 1
          </div>
          <div class="card card-block">
            Something else nr 2
          </div>
        </div>
        </p>

      </div>
    </div>

  </div>
</div>
